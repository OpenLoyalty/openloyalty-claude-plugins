{
  "openloyalty": {
    "command": "npx",
    "args": ["-y", "@open-loyalty/mcp-server@latest"],
    "env": {
      "OPENLOYALTY_API_URL": "${OPENLOYALTY_API_URL}",
      "OPENLOYALTY_API_TOKEN": "${OPENLOYALTY_API_TOKEN}",
      "OPENLOYALTY_DEFAULT_STORE_CODE": "${OPENLOYALTY_DEFAULT_STORE_CODE:-default}"
    }
  },
  "mcp-atlassian": {
    "command": "uvx",
    "args": ["mcp-atlassian"],
    "env": {
      "JIRA_URL": "${JIRA_URL}",
      "JIRA_USERNAME": "${JIRA_USERNAME}",
      "JIRA_API_TOKEN": "${JIRA_API_TOKEN}",
      "CONFLUENCE_URL": "${CONFLUENCE_URL}",
      "CONFLUENCE_USERNAME": "${CONFLUENCE_USERNAME}",
      "CONFLUENCE_API_TOKEN": "${CONFLUENCE_API_TOKEN}"
    }
  }
}
